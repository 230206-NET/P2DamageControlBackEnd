                    <input type="text" name="Amount" placeholder="Damage Amount" aria-label="Damage Amount" required>
                    <script src="@Url.Content("~/js/searchForDamager.js")"></script>
                    <input onkeyup="retrieveDamagers()" id="Damager" type="search" name="Damager Name"
                        placeholder="Damager Name" aria-label="Damager Name" required>
                    <input type="date" name="Date of Damage" aria-label="Date of Damage" required>
                    <input type="paragraph" name="Description" aria-label="Description" required>
                    <fieldset>

                    </fieldset>
                    <button type="submit" class="contrast" onclick="event.preventDefault()">Submit Claim</button>
                </form>
            </div>
        </article>
